#!/bin/bash

echo "POST_CHECKOUT START"

CURRENT_BRANCH=$(git branch --show-current)
PREVIUS_BRANCH=$(git name-rev $(git rev-parse @{-1}) --name-only)

echo "CURRENT_BRANCH: $CURRENT_BRANCH"
echo "PREVIUS_BRANCH: $PREVIUS_BRANCH"

ENV_CURRENT_FILE=.env.${CURRENT_BRANCH}

if test -f "$ENV_CURRENT_FILE"; then
    echo "$ENV_CURRENT_FILE exits."
    mv ./${ENV_CURRENT_FILE} ./.env
fi